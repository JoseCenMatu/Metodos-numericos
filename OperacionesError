    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double num1, num2, res1, res2;
        num1=Double.parseDouble(vApr.getText());
        num2=Double.parseDouble(vExa.getText());
        
        res1=num1-num2;
        if(res1<=0) res1=res1*-1;
        res2=res1/num1;
        
        ErrorA.setText(String.valueOf(res1));
        ErrorR.setText(String.valueOf(res2));
        
        res2=res2*100;
        ErrorRp.setText(String.valueOf(res2));
        
        
        
    }                                        

    private void jToggleButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                               
    System.exit(0); 
    }                                              

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        vApr.setText("");
        vExa.setText("");
        ErrorA.setText("");
        ErrorR.setText("");
    }                                        

